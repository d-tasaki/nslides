= react_component('TopMenue')

%div.slide_index
  %p#notice= notice
  %h1 スライド一覧 (てぬきでごめんなさい)
  %table
    %thead
      %tr
        %th Thumbnail
        %th Title
        %th Status
        %th{:colspan => "3"} Action
    %tbody
      - @slides.each do |slide|
        %tr
          %td
            - if slide.pages.first.present?
              = link_to image_tag(slide.pages.first.image_src, {width: 200}), slide
          %td= slide.title
          %td= slide.status
          %td
            - if slide.enabled?
              = link_to 'Show', slide
            - else
              Show
          %td= link_to 'Edit', edit_slide_path(slide)
          %td= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Slide', new_slide_path

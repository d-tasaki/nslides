= form_for(slide, :multipart => true) do |f|
  - if slide.errors.any?
    #error_explanation
      %h2
        = pluralize(slide.errors.count, "error")
        prohibited this slide from being saved:
      %ul
        - slide.errors.full_messages.each do |message|
          %li= message

  = f.label :title, "title"
  = f.text_field :title

  = f.file_field :file

  .actions
    = f.submit

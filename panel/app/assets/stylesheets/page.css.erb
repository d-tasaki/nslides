div.page img {
    position: absolute;
    top:      0px;
    left:     0px;
    z-index:  5;
}

div.page .prevPage,
div.page .nextPage {
    width:    300px;
    height:   600px;
    position: absolute;
    z-index:  20;
    opacity:  0;
    cursor: pointer;
}

div.page .prevPage {
    top:  0px;
    left: 0px;
}

div.page .nextPage {
    top:  0px;
    left: 500px;
}
